<div> 
<p style="background:#ddd;color:#111;padding:5px"><strong>{{localize "CONSOLE.manager.current-character"}}:</strong> {{#if manager._represents.character.name}}{{manager._represents.character.name}}{{else}}{{localize "CONSOLE.manager.n/a"}}{{/if}}</p>
<button title="{{localize "CONSOLE.manager.add-new-console"}}" class="console-manage-button" data-action="create"><i class="fa-solid fa-plus"></i> {{localize "CONSOLE.manager.add-new-console"}}</button>
   {{#each consoles}}
        <div style="background:{{styling.bg}} url({{styling.bgImg}});border:1px solid {{styling.fg}}" class="console-manager-entry">
            <div style="display:flex;flex-direction:column;margin-right:4px;box-sizing:border-box;width:100%">
                <button style="all:unset;cursor:pointer" title="{{localize "CONSOLE.manager.open-console"}}" data-console-id="{{this.id}}" data-action="open-console">
                    <div style="background:{{styling.fg}};color:{{styling.bg}};padding:3px" class="console-seperate">
                        <span><strong>{{name}}</strong></span>
                        <div>
                            <i class="fa solid {{#if styling.messengerStyle}}fa-comments{{else}}fa-terminal{{/if}}"></i>
                            {{#if locked}}<i class="fa-solid fa-lock"></i>{{/if}}
                            <i class="fa-solid {{#if public}}fa-eye{{else}}fa-eye-slash{{/if}}"></i>
                        </div>
                    </div>
                    <div style="center;color:{{styling.fg}};display:flex;flex-direction:column;justify-content:space-between">
                        <p><strong>{{localize "CONSOLE.manager.gm-info"}}: </strong>{{gmInfo}}</p>
                        <p><strong>{{localize "CONSOLE.manager.description"}}: </strong>{{description}}</p>
                        <p><strong>{{localize "CONSOLE.manager.scenes"}}: </strong>[ {{#each sceneNames}}<span>{{this}}{{#isNotLastIndex ../sceneNames @index}}, {{/isNotLastIndex}}</span>{{/each}} ]</p>
                    </div>
                </button>
            </div>
            <div style="display:flex;flex-direction:column;justify-content:space-between">
                <button style="background:none;border:1px solid {{styling.fg}}" title="{{localize "CONSOLE.manager.edit-console"}}" data-console-id="{{id}}" data-action="edit-console"><i style="color:{{this.styling.fg}}" class="fa-solid fa-pen-to-square"></i></button>
                <button style="background:none;border:1px solid {{styling.fg}}" title="{{localize "CONSOLE.manager.toggle-visibility"}}" data-console-id="{{id}}" data-action="toggle-visibility"><i style="color:{{this.styling.fg}}" class="fa-solid {{#if public}}fa-eye-slash{{else}}fa-eye{{/if}}"></i></button>
                <button style="background:none;border:1px solid {{styling.fg}}" title="{{localize "CONSOLE.manager.toggle-lock"}}" data-console-id="{{id}}" data-action="toggle-lock"><i style="color:{{this.styling.fg}}" class="fa-solid {{#if locked}}fa-lock{{else}}fa-lock-open{{/if}}"></i></button>
                <button style="background:none;border:1px solid {{styling.fg}}" title="{{localize "CONSOLE.manager.duplicate-console"}}" data-console-id="{{id}}" data-action="duplicate-console"><i style="color:{{this.styling.fg}}" class="fa-solid fa-clone" ></i></button>
                <button style="background:none;border:1px solid {{styling.fg}}" title="{{localize "CONSOLE.manager.delete-console"}}" data-console-id="{{id}}" data-action="delete-console"><i style="color:{{this.styling.fg}}" class="fa-solid fa-trash" ></i></button>
            </div>
        </div>
    {{/each}}
</div>

