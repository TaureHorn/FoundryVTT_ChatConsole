<div style="background-attachment:scroll;background:{{styling.bg}} url({{styling.bgImg}});background-size:contain;border-top:2px solid {{styling.fg}};height:100%;padding:10px;overflow-y:scroll;width:100%">
    <div style="background:{{styling.fg}};color:{{styling.bg}};padding:3px" class="console-seperate">
        <span><strong>{{content.title}}</strong></span>
        <div>
            {{#equal limits.type "words"}}[limit:{{limits.value}} words]{{/equal}}
            {{#equal limits.type "characters"}}[limit:{{limits.value}} characters]{{/equal}}
            <i class="fa-solid {{#if public}}fa-eye{{else}}fa-eye-slash{{/if}}"></i>
        </div>
    </div>
    <form id="input">
        <div style="display:flex;margin-bottom:10px">
            <div style="border:1px solid {{styling.fg}};border-radius:0px;color:{{styling.fg}};padding:3px 5px"><span><strong>@{{character}}</strong></span></div>
            <input style="border:1px solid {{styling.fg}};border-radius:0;color:{{styling.fg}};flex:6;outline:none;padding:15px" id="consoleInputText{{id}}" maxlength="{{limits.hardLimit}}" minlength="0" name="consoleInputText" type="text" value="{{inputVal}}" placeholder="..." autocomplete="off"/>
            <button style="background:none;border:1px solid {{styling.fg}};border-radius:0;color:{{styling.fg}};flex:1;outline:none" id="submitButton" type="submit">send</button>
        </div>
    </form>
    {{#each content.body}}
        <button class="console-message-interact" style="background:none;{{#unameInPrevIndex username @index ../content.body}};margin-top:30px{{else}}margin-top:10px{{/unameInPrevIndex}}" data-message-index={{@index}} data-console-id={{../id}} data-action="message-interact" title="{{localize "CONSOLE.message-interact"}}">
            <div style="background:{{../styling.fg}};color:{{../styling.bg}};{{#equal username ../character}}margin-left:auto;margin-right:0;text-align:end{{else}}text-align:start{{/equal}};width:100%" class="console-message">
                <span><strong>{{username}}</strong></span></br>
                <span>{{text}}</span>
            </div>
        </button>
        </br>
    {{/each}}
</div>

