<div> 
<p><strong>{{localize "CONSOLE.manager.current-character"}}:</strong> {{#if manager._represents.character.name}}{{manager._represents.character.name}}{{else}}{{manager._represents.name}}{{/if}}</p>
    {{#each consoles}}{{#if public}}
    {{#inArray ../userId playerOwnership}}
        <div style="background:{{styling.bg}} url({{styling.bgImg}});border:1px solid {{styling.fg}}" class="console-manager-entry">
            <div style="display:flex;flex-direction:column;box-sizing:border-box;width:100%">
                <button style="all:unset;cursor:pointer" title="{{localize "CONSOLE.manager.open-console"}}" data-console-id="{{this.id}}" data-action="open-console">
                    <div style="background:{{styling.fg}};color:{{styling.bg}};padding:3px" class="console-seperate">
                        <div>
                            {{#inArray id ../flags}}<span class="notifPip" style="border: 1px solid {{styling.bg}};color:{{styling.fg}}">{{countInArray id ../flags}}{{/inArray}}</span>
                            <span><strong>{{name}}</strong></span>
                        </div>
                        <div>
                            <i class="fa-solid {{#if styling.messengerStyle}}fa-comments{{else}}fa-terminal{{/if}}"></i>
                            {{#if locked}}<i class="fa-solid fa-lock"></i>{{/if}}
                        </div>
                    </div>
                    <p style="color:{{styling.fg}}">{{description}}</p>
                </button>
            </div>
        </div>
    {{/inArray}}
    {{/if}}{{/each}}
</div>

